{{ $title := "" -}}
{{ if ne .Title site.Title -}}
{{ $title := printf "%s " .Title -}}
{{ end -}}
{{ $baseCSS := resources.Get "css/base.css" | resources.ExecuteAsTemplate "css/base.css" . | minify | fingerprint -}}
{{ `<?xml version="1.0" encoding="utf-8" ?>` | safeHTML }}
<xsl:stylesheet version="1.0" xmlns:xsl="http://www.w3.org/1999/XSL/Transform">
  <xsl:output method="html" doctype-system="about:legacy-compat" />
  <xsl:template match="/rss">
    <html lang="{{ site.LanguageCode }}">
      <head>
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>{{ $title }}RSS | {{ site.Title }}</title>
        <link rel="stylesheet" href="{{ $baseCSS.Permalink }}" integrity="{{ $baseCSS.Data.Integrity }}" />
      </head>
      <body>
        {{ partial "banner.html" . }}
        <main>
          <div class="u-wrapper">
            <div class="u-padding">
              <h2 class="Heading-title">
                {{ with .OutputFormats.Get "RSS" }}
                <a class="Heading-link u-clickable" href="{{ .Permalink }}" rel="bookmark">{{ $title }}RSS</a>
                {{ else }}
                <span class="Heading-link u-clickable">{{ $title }}RSS</span>
                {{ end }}
              </h2>
              {{ with site.Params.rss }}
              <p>
                {{ . | safeHTML }}
              </p>
              {{ end }}
            </div>
          </div>
        </main>
        {{ partial "footer.html" . }}
      </body>
    </html>
  </xsl:template>
</xsl:stylesheet>
